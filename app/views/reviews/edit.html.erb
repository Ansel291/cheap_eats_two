<div class="col-md-6 col-md-offset-3">

  <div class="edit-review-form ubuntu">

<h1>Edit Review</h1>

    <%= simple_form_for([@dish, @review]) do |f| %>
      <div class="ubuntu" id="rating-form">
      <label class="rating-headline">Rating</label>
      </div>
      <%= f.input :comment %>
      <%= f.button :submit %>
    <% end %>

  </div>

</div>


<script>
  $('#rating-form').raty({

    scoreName: 'review[rating]'
  });
</script>
