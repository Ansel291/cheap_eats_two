<h1 class="current-category"><%= params[:category] %></h1>
<h1>Hello</h1>
<% if @dishes.count == 0 %>

  <h3>There are currently no dishes in this category</h3>

<% else %>

  <div class="row">

    <% @dishes.each do |dish| %>

      <div class="col-md-3">
        <a href="/dishes/<%= dish.id %>">
          <%= image_tag dish.image.url(:medium), class: "dish" %>
        </a>
      </div>

    <% end %>

  </div>

<% end %>








