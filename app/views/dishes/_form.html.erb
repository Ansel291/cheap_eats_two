<%= simple_form_for @dish do |f| %>
  <%= select_tag(:category_id, options_for_select(@categories), :prompt => "Select a category") %>
  <%= f.input :title, label: "Dish Name:" %>
  <%= f.input :restaurant, label: "Restaurant Name:" %>
  <%= f.input :city, label: "City, State:" %>
  <%= f.input :price, label: "$" %>
  <%= f.input :description, label: "Description:" %>
  <%= f.input :image, as: :file, label: "Dish Image:" %>
  <%= f.button :submit, :class => 'btn-custom2' %>
<% end %>
