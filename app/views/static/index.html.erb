<%= link_to dishes_path do %>

<img src="http://i.imgur.com/k4HHGqB.jpg" id="home-image">

<% end %>

<h1 class="current-category"><%= params[:category] %></h1>

<% if @dishes.count == 0 %>

  <h3>There are currently no dishes in this category</h3>

<% else %>

  <div class="row">

    <% @dishes.each do |dish| %>

      <div class="col-md-3">
        <a href="/dishes/<%= dish.id %>">
          <%= image_tag dish.image.url(:medium), class: "dish" %>
        </a>
      </div>

    <% end %>

  </div>

<% end %>

<script>

// $( "#home-image" ).on( "click", function() {
//    $( "#home-image" ).fadeOut(3000);
// });


$('a').click(function(e) {
  e.preventDefault();
  newLocation = this.href;
  $('#home-image').fadeOut(3000, newpage);
});
function newpage() {
  window.location = newLocation;
}

</script>


